        stage("Deploy") {
            environment {
                DOCKER_PASS = credentials("docker_token")
            }
            steps {
                bat 'docker build -t huyfst/payment .'
                bat 'docker login -u huyfst -p %DOCKER_PASS%'
                bat 'docker push huyfst/payment'
                bat 'trivy image huyfst/payment'
            }
        }
    }
}